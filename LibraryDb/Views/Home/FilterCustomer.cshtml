@model CustomerBook

<h1>Show books borrowed by customer by choosing customer</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="FilterCustomer" method="post">
            <table>
                <tr>
                    <td>
                        <label>Choose customer:</label>
                        <select name="customerId" asp-for="FkCustomerId" asp-items="@ViewBag.filterCustomerList">
                            <option value="">Choose customer in list</option>
                        </select>
                    </td>
                </tr>
                    <td>
                        <button type="submit">Filter</button>
                    </td>
            </table>
        </form>
    </div>
</div>